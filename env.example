# Sample environment file for LuminaryAI

# Flask
FLASK_ENV=development
FLASK_PORT=5000

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/luminary.log

# Rate Limit
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=80
RATE_LIMIT_PER_HOUR=2500

# Health Check
HEALTH_CHECK_ENABLED=True

# JWT Secret
JWT_SECRET=replace-me
JWT_ALGORITHM=HS256
TOKEN_EXPIRE_MINUTES=120

# Google Gemini (LLM)
GOOGLE_API_KEY=replace-with-api-key
LLM_MODEL=gemini-pro
EMBEDDING_MODEL=models/embedding-001
TEMPERATURE=0.38
MAX_TOKENS=1800

# ChromaDB (Vector DB)
CHROMA_COLLECTION=luminary_docs
CHROMA_DIRECTORY=chromadb_storage

# Database
DB_URL=sqlite:///luminary.db
# For PostgreSQL example:
# DB_URL=postgresql://luminary:luminary@localhost/luminary

# ChromaDB Vector Database for Agno Agent
CHROMA_STORAGE_PATH=chromadb_storage/agno_legal
CHROMA_COLLECTION=legal_docs

# Security
CSRF_ENABLED=True
SECURITY_HEADERS=True

# CORS
CORS_ORIGINS=*

# Upload Limits
MAX_UPLOAD_SIZE=10000000
MAX_CONTENT_LENGTH=16000000

# S3 Storage (Optional)
# S3_BUCKET=my-bucket
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-access-key

# Email (Optional)
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_USER=EMAIL_FROM_ADDRESS
# EMAIL_PASSWORD=EMAIL_PASSWORD
# EMAIL_FROM=LegalAI@example.com
# EMAIL_USE_TLS=True

# Indian Kanoon API (Optional)
# KANOON_API_URL=https://api.indianKanoon.com/v1/
# KANOON_API_KEY=replace-with-key

